<%= form_tag login_path, class: "form-signin #{get_error_classes(@have_errors)}", role: 'form' do %>
	<div>
		<%= email_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email', autofocus: true, required: true %>
	</div>
	<div>
		<%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password', required: true %>
	</div>
	<div>
		<%= submit_tag "Login", method: :post, class: 'btn btn-lg btn-primary btn-block' %>
	</div>
<% end %>