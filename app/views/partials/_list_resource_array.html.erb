<% return unless records
   columns = get_columns_of(resource) %>

<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <% columns.each do |column| %>
              <th><%= column.gsub('_',' ').titleize %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% records.each do |record| %>
            <tr>
              <% columns.each do |column| %>
                <td><%= record[column] %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>