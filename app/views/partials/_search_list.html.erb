<% records = find_records_from_string(resource)
   columns = get_columns_of(records) %>

<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-condensed table-hover">
        <thead>
          <tr>
            <% columns.each do |column| %>
              <th><%= column.humanize %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% records.each do |record| %>
            <tr id="<%= record.id %>">
              <% columns.each do |column| %>
                <td><%= record[column] %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>